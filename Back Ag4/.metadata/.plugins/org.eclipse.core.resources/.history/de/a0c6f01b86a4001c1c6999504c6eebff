import java.util.Scanner;

import service.CadastroService;
import service.ContatoService;
import service.DestinoService;

public class Program {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		service.CadastroService cadastroService = new CadastroService();
		cadastroService.save();
		
		int number;
		do {
			System.out.println("Se tiver dúvidas, ou necessitar de alguma informação adicional"
					+ "informe os seus dados e entraremos em contato com você. ");
			System.out.println("Solicitar contato? \n 1-Sim \n 2-Não \n 3 -Editar Cadastro");
			
			number = sc.nextInt();
		}while(number!= 1 && number!= 2 && number!= 3);
		
		if (number == 1) {
			service.ContatoService contatoService = new ContatoService();
			contatoService.save();
		
		}else if(number == 3){
			CadastroService.update();
			
		}else {
			System.out.println("Agora vamos cadastrar o seu Destino .. ");
			DestinoService destinoService = new DestinoService();
			destinoService.save();
			
			int opcao;
			do {
				System.out.println("Precisa alterar os dados da sua reserva? \n1 -Sim \n2-Não \n3-Cancelar reserva");
				opcao = sc.nextInt();
			}while(opcao != 1 && opcao != 2 && opcao != 3);
			if(number == 1) {
				destinoService = new DestinoService();
				destinoService.update();
			}else if(opcao == 3) {
				destinoService = new DestinoService();
				destinoService.delete();
			}else {
				System.out.println("Nenhum dado do seu agendamento foi alterado, enviaremos um email com a confirmação da reserva, aguarde."
						+ "CampingTour, a familia especialista em realizar sonhos e te conectar com a mãe natureza.");
			}
				
			
		}
	}

}
